<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
 
<prefwindow id="gui-minify-prefs"
  title="Hide GUI Bars configuration"
  xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul" style="width: 500px">
 
  <script type="application/x-javascript" src="chrome://gui_minify/content/keyutils.js"/>
  <script type="application/x-javascript" src="chrome://gui_minify/content/options.js"/>

  <prefpane id="gui-minify-pref-pane" label="Settings">
    <preferences>
      <preference id="gui-minify-pref-tabbar" name="gui_minify.tabbar" type="bool"/>
      <preference id="gui-minify-pref-addrbar" name="gui_minify.addrbar" type="bool"/>
      <preference id="gui-minify-pref-menubar" name="gui_minify.menubar" type="bool"/>
      <preference id="gui-minify-pref-bmarksbar" name="gui_minify.bmarksbar" type="bool"/>
      <preference id="gui-minify-pref-statusbar" name="gui_minify.statusbar" type="bool"/>

      <!--preference id="gui-minify-pref-keystring" name="gui_minify.atxtkey" type="string"/>
      <preference id="gui-minify-pref-akey" name="gui_minify.akey" type="string"/>
      <preference id="gui-minify-pref-akeycode" name="gui_minify.akeycode" type="string"/>
      <preference id="gui-minify-pref-amodifiers" name="gui_minify.amodifiers" type="string"/-->

      <preference id="gui-minify-pref-allshortcut" name="gui_minify.allshortcut" type="string"/>

      <preference id="gui-minify-pref-sbprogress" name="gui_minify.sbprogressbar" type="bool"/>
      <preference id="gui-minify-pref-sblink" name="gui_minify.sblink" type="bool"/>
      <preference id="gui-minify-pref-sbcolor" name="gui_minify.sbcolor" type="string"/>
      <preference id="gui-minify-pref-sbbgcolor" name="gui_minify.sbbgcolor" type="string"/>
		
    </preferences>

    <description id="title" value="Hide GUI Bars configuration" style="font-size: 200%; font-weight: bold; margin-bottom: 15px"/>
 
    <tabbox>
      <tabs>
        <tab label="Options" selected="true"/>
        <tab label="Statusbar replacer"/>
        <tab label="Credits"/>
      </tabs>

      <tabpanels>
        <tabpanel orient="vertical">

 
    <vbox style="margin-top: 15px">
      <label style="font-weight: bold; font-size: 120%">General:</label>
    </vbox>
    <vbox style="margin-top: 5px">
      <hbox>
        <checkbox label="Hide MenuBar" preference="gui-minify-pref-menubar" id="opt-menubar" checked="true"/>
      </hbox>
      <hbox>
        <checkbox label="Hide NavigationBar" preference="gui-minify-pref-addrbar" id="opt-addrbar" checked="true"/>
      </hbox>
      <hbox>
        <checkbox label="Hide TabBar" preference="gui-minify-pref-tabbar" id="opt-tabbar" checked="true"/>
      </hbox>
      <hbox>
        <checkbox label="Hide BookmarksBar" preference="gui-minify-pref-bmarksbar" id="opt-bmarksbar" checked="true"/>
      </hbox>
      <hbox>
        <checkbox label="Hide StatusBar" preference="gui-minify-pref-statusbar" id="opt-statusbar" checked="true"/>
      </hbox>
    </vbox>

    <vbox style="margin-top: 30px">
      <label style="font-weight: bold; font-size: 120%" value="Key bindings (only alphanumeric key are allowed):"/>
    </vbox>
    <vbox style="margin-top: 5px">
      <hbox>
        <button id="grab_key" label="Change key" width="115px" oncommand="grabKey()"/> 
        <textbox id="txt_keycode" disabled="true" label="CTRL-Z"  preference="gui-minify-pref-allshortcut" style="font-weight: bold; color: black; width: 105px;"/>
        <label flex="3" value="" id="hgb-all-validate" style="color: red; margin-top: 8px"/>
      </hbox>
    </vbox>
  </tabpanel>


  <tabpanel orient="vertical">
    <vbox style="margin-top: 15px">
      <label style="font-weight: bold; font-size: 120%">Statusbar functions:</label>
    </vbox>
    <vbox style="margin-top: 5px">
      <hbox>
        <checkbox label="Enable OverLink tooltip" preference="gui-minify-pref-sblink" id="opt-link" checked="true"/>
      </hbox>
      <hbox>
        <checkbox label="Enable Loading-progress tooltip" preference="gui-minify-pref-sbprogress" id="opt-progress" checked="true"/>
      </hbox>
			<vbox style="height: 20px"/>
      <hbox>
				<label style="margin-top: 7px; width: 170px">Statusbar replacer color:</label>
        <textbox flex="1" id="txt_sbcolor" preference="gui-minify-pref-sbcolor" style="width: 60px;" label="#ffffff"/>
				<separator flex="3"/>
      </hbox>
      <hbox>
				<label style="margin-top: 7px; width: 170px">Statusbar replacer background:</label>
        <textbox  flex="1" id="txt_sbbgcolor" preference="gui-minify-pref-sbbgcolor" style="width: 60px;" label="#000000"/>
				<separator flex="3"/>
      </hbox>
	  </vbox>
	</tabpanel>

        <tabpanel orient="vertical">
          <vbox style="margin-top: 15px">
            <label style="font-weight: bold; font-size: 120%; margin-bottom: 15px">Special thanks to:</label>
            <description>
              Luca Greco a.k.a. RPL, that introduced me to XUL platform
            </description>
            <description>
              Nico Delle Side a.k.a. DDS, for his precious contribution
            </description>
          </vbox>

        </tabpanel>
      </tabpanels>
    </tabbox>


  </prefpane>
</prefwindow>

